<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_list"
        android:orientation="horizontal"
        android:weightSum="10.5"
        android:background="@color/design_default_color_secondary_variant">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.4"
            android:id="@+id/txtlable5"
            android:textColor="@color/white"
            android:text="Withdrawl"
            />

        <View android:layout_weight="0.1"
            android:layout_width="0dp"
            android:layout_height="20dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.8"
            android:id="@+id/txt3label100"
            android:textColor="@color/white"
            android:text="Rs. 100"
            />

        <View android:layout_weight="0.1"
            android:layout_width="0dp"
            android:layout_height="20dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.8"
            android:textColor="@color/white"
            android:id="@+id/txt3label200"
            android:text="Rs. 200"
            />

        <View android:layout_weight="0.1"
            android:layout_width="0dp"
            android:layout_height="20dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.8"
            android:textColor="@color/white"
            android:id="@+id/txt3label500"
            android:text="Rs. 500"
            />

        <View android:layout_weight="0.1"
            android:layout_width="0dp"
            android:layout_height="20dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.8"
            android:textColor="@color/white"
            android:id="@+id/txt3label2000"
            android:text="Rs. 2000"
            />

        <View android:layout_weight="0.1"
            android:layout_width="0dp"
            android:layout_height="20dp"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>